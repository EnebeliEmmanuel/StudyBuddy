{
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@studybuddy/frontend/*": [
        "./@studybuddy/frontend/src/*"
      ],
      "@studybuddy/backend/*": [
        "./@studybuddy/backend/src/*"
      ]
    },
    "rootDir": ".",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "module": "ES2022",
    "moduleResolution": "node",
    "target": "ES2020",
    "incremental": true
  }
}
