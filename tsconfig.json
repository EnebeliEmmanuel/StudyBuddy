{
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@studybuddy/frontend/*": [
        "./@studybuddy/frontend/src/*"
      ],
      "@studybuddy/backend/*": [
        "./@studybuddy/backend/src/*"
      ]
    },
    "rootDir": ".",
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "incremental": true
  }
}
