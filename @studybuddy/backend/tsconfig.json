{
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "lib": [
      "ESNext"
    ],
    "target": "ESNext",
    "module": "CommonJS",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictFunctionTypes": true,
    "allowUnreachableCode": false
  },
  "include": [
    "./src/**/*.ts",
    "run.ts"
  ],
  "references": [
    {
      "path": "../../tsconfig.json"
    }
  ],
  "extends": "../../tsconfig.json"
}
