{
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "target": "es2020",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictFunctionTypes": true,
    "allowUnreachableCode": false
  },
  "include": [
    "./src/**/*.ts",
    "run.ts"
  ],
  "references": [
    {
      "path": "../../tsconfig.json"
    }
  ],
  "extends": "../../tsconfig.json"
}
