{
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@studybuddyfrontend/*": [
        "./frontend/src/*"
      ],
      "@studybuddy/backend/*": [
        "./backend/src/*"
      ]
    },
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "module": "ES2022",
    "moduleResolution": "node",
    "target": "ES2022",
    "incremental": true
  }
}
