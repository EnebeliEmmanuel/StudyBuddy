{
  "compilerOptions": {
    "composite": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "ES2020",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "jsx": "preserve"
  },
  "include": [
    "./src/**/*.{js,jsx}"
  ],
  "references": [
    {
      "path": "../tsconfig.json"
    }
  ],
  "extends": "../tsconfig.json"
}
